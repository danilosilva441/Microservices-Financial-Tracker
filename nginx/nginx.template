# ==============================

# ------------------------------
# üîí Upstreams (com fallback local)
# ------------------------------

upstream auth_service {
    server ${AUTH_SERVICE_HOST:-auth-service}:${AUTH_SERVICE_PORT:-8080};
}

upstream billing_service {
    server ${BILLING_SERVICE_HOST:-billing-service}:${BILLING_SERVICE_PORT:-8080};
}

upstream analysis_service {
    server ${ANALYSIS_SERVICE_HOST:-analysis-service}:${ANALYSIS_SERVICE_PORT:-3000};
}

upstream frontend {
    server ${FRONTEND_HOST:-frontend}:${FRONTEND_PORT:-80};
}

# ------------------------------
# üöÄ Servidor principal
# ------------------------------

server {
    listen 80;

    # --------------------------
    # üîê Rotas de API
    # --------------------------
    location /api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # AUTH
        if ($uri ~* "^/api/(users|token|admin/promote-to-admin)") {
            proxy_pass http://auth_service;
            break;
        }

        # ANALYSIS
        if ($uri ~* "^/api/analysis") {
            rewrite ^/api/analysis/(.*)$ /$1 break;
            proxy_pass http://analysis_service;
            break;
        }

        # DEMAIS rotas ‚Üí BILLING
        proxy_pass http://billing_service;
    }

    # --------------------------
    # üåç Frontend (SPA)
    # --------------------------
    location / {
        proxy_pass http://frontend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        try_files $uri /index.html;
    }

    # --------------------------
    # üß± P√°gina de fallback
    # --------------------------
    error_page 404 /index.html;
}
