# --- EST√ÅGIO 1: Build (Constru√ß√£o) ---
FROM node:20-slim AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

# üîß Corrige permiss√µes do Vite (evita "Permission denied")
RUN chmod +x node_modules/.bin/vite

COPY . .

# üîß Usa o Vite via npx (garante execu√ß√£o mesmo sem PATH)
RUN npx vite build

# --- EST√ÅGIO 2: Serve (Produ√ß√£o) ---
FROM nginx:1.25-alpine

COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
